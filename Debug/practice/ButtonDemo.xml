<?xml version="1.0" encoding="utf-8"?>
<!-- 整体布局结构 -->
<Window size="600,569">
    <VerticalLayout>
        <!-- <HorizontalLayout height="40" bkcolor="FF46B39E" /> -->
        <!-- 动态按钮 每个状态有不同的图片 -->
        <HorizontalLayout height="100" bkcolor="FF297FB8">
            <HorizontalLayout name="leftLayout" height="80" padding="10,10,10,10" childpadding="10" width="300">
                <Button name="min" width="80" normalimage="image/min4.png" hotimage="image/min2.png" pushedimage="image/min1.png" focusedimage="image/min3.png"/>
                <Button name="max" width="80" normalimage="image/max4.png" hotimage="image/max2.png" pushedimage="image/max1.png" focusedimage="image/max3.png"/>
                <Button name="res" width="80" normalimage="image/restore4.png" hotimage="image/restore2.png" pushedimage="image/restore1.png" focusedimage="image/restore3.png"/>
            </HorizontalLayout>
            <HorizontalLayout name="rightLayout" height="80" padding="10,10,10,10" childpadding="10">
                <Button name="min2" width="80" normalimage="image/min0.png" bkcolor="FF3DDAF2"/>
                <Button name="max2" width="80" normalimage="image/max0.png" bkcolor="FF3DDAF2" />
                <Button name="restore2" width="80" normalimage="image/restore0.png" bkcolor="FF3DDAF2"/>
            </HorizontalLayout>
        </HorizontalLayout>
        <HorizontalLayout height="500" bkcolor="FF297FB8">
            <VerticalLayout width="510">
                <TileLayout name="colortile" itemsize="2,2"></TileLayout>
            </VerticalLayout>
            <VerticalLayout width="10" bkcolor="FFDDDDDD" />
            <VerticalLayout width="80">
                <TileLayout name="gtile" itemsize="80,2" />
            </VerticalLayout>
        </HorizontalLayout>
    </VerticalLayout>
</Window>